import time
import random

print("=== Password Entry Simulator ===")

# Variables
Rand1 = ['Fog', 'Silver', 'Tango','Pass', 'dino', 'banana']
Rand2 = ['monkey', 'snake', 'thunder','word', 'pizza', 'dart']
RC = random.choice(Rand1)
RC2 = random.choice(Rand2)
Combo = RC + RC2
password = Combo
attempts = 0  


print(f"(Hint) Password is: {password}")
print(f"(DEBUG) Attempts: {attempts}")


while attempts < 3:
    user_input = input("Enter your password here: ")

    if user_input == password:
        time.sleep(0.2)
        print("Access Granted âœ…")
        break
    else:
        time.sleep(0.2)
        print("Incorrect! Try again.")
        attempts += 1


if attempts == 3 and user_input != password:
    print("Access Denied ðŸš«")
